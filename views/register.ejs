<%- include('header'); -%>
 <div class="content">
    <h1>Register</h1>
    <div class="register">
        <form method="post" action="/api/register">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password"><br><br>
            <label for="society">Society:</label>
            <input type="text" id="society" name="society">
            <label for="contact">Contact:</label>
            <input type="text" id="contact" name="contact"><br><br>
            <label for="addres">Address:</label>
            <input type="text" id="addres" name="addres">
            <label for="zipcode">Zip:</label>
            <input type="text" id="zipcode" name="zipcode" pattern="\d+" placeholder="12345"><br><br>
            <label for="city">City:</label>
            <input type="text" id="city" name="city">
            <label for="phone">Phone:</label>
            <input type="tel" id="phone" name="phone"><br><br>
            <label for="fax">Fax:</label>
            <input type="text" id="fax" name="fax">
            <label for="max_outstanding">Max Outstanding:</label>
            <input type="text" id="max_outstanding" name="max_outstanding"><br><br>
            <input type="submit" value="Submit">
        </form> 
    </div>
 </div><br>
<%- include('footer'); -%>